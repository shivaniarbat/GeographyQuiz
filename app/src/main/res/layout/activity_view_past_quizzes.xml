<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ViewPastQuizzes">

    <ImageView
        android:id="@+id/summaryImageIcon"
        android:layout_width="150dp"
        android:layout_height="137dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toTopOf="@+id/pastQuizSummaryTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toEndOf="@+id/backImageButtonToHomePage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        app:srcCompat="@drawable/summary_page_icon" />

    <TextView
        android:id="@+id/pastQuizSummaryTitle"
        android:layout_width="308dp"
        android:layout_height="63dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/past_quiz_summary"
        android:textColor="@color/colorSomethingYellow"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/toDisplayQuizSummary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summaryImageIcon" />

    <ImageButton
        android:id="@+id/backImageButtonToHomePage"
        android:layout_width="68dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/summaryImageIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back_button" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/toDisplayQuizSummary"
        android:layout_width="390dp"
        android:layout_height="378dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastQuizSummaryTitle" />

</android.support.constraint.ConstraintLayout>